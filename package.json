    "@types/lodash": "^4.14.112",
    "@types/node": "^11.13.6",
    "@types/qs": "^6.5.1",
    "@types/react": "^16.4.6",
    "@types/react-datepicker": "^2.3.0",
    "@types/react-dom": "^16.0.6",
    "@types/react-helmet": "^5.0.6",
